source 'https://github.com/CocoaPods/Specs.git'
source 'https://bitbucket.org/kogimobilesas/podspecs.git'

platform :ios, '9.0'
use_frameworks!

target 'Brizeo' do
    #FB
    pod 'FBSDKLoginKit'
    pod 'FBSDKCoreKit'
    pod 'FBSDKShareKit'
    pod 'FBSDKMessengerShareKit'
    
    #Alamofire
    pod 'Alamofire', '~> 4.0'
    pod 'AlamofireImage', '~> 3.1.0'
    
    pod 'SVProgressHUD', '~> 1.0'
    pod 'Mixpanel', '~> 2.9'
    pod 'Branch', '~> 0.12'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'Google/Analytics'
    
    pod 'Parse'
    pod 'NYTPhotoViewer', '~> 1.1'
    
    pod 'MSRangeSlider'
    pod 'UIScrollView-InfiniteScroll', '~> 0.7'
    pod 'IGLDropDownMenu'
    pod 'ParseUI'
    
    #new pods
    pod 'ZTDropDownTextField'
    pod 'ChameleonFramework/Swift', :git => 'https://github.com/ViccAlexander/Chameleon.git'
    pod 'DMSwipeCards'
    pod 'GBHFacebookImagePicker'
    pod 'CarbonKit'
    pod 'InstagramImagePicker'
    pod 'SDWebImage', '~>3.8'
    pod 'SWTableViewCell'
    pod 'Localytics'
    pod 'CLLocationManager-blocks'
    
    # for managing user defaults
    pod 'SwiftyUserDefaults'
    
    # main chat
    pod 'Applozic', '~>3.8'
    
    # for keyboard management
    pod 'Typist'
    
    #Moya
    pod 'Moya'
    pod 'Moya-ObjectMapper'
    
    # very useful to work with date
    pod 'SwiftDate', '~> 4.0'
    
    # google places for location
    pod 'GooglePlacesAutocomplete', :git => 'https://github.com/danielkiedrowski/ios_google_places_autocomplete.git'
    
    # text view placeholder
    pod 'KMPlaceholderTextView', '~> 1.3.0'
end
